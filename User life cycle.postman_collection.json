			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"let date = Date.now();",
							"let email = 'test.' + date + '@gmail.com';",
							"pm.environment.set('test_user_email',email);"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Signup with new user', function () {",
							"    pm.response.to.have.status(200)",
							"})"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n\t\"full_name\":\"test user\",\n\t\"email\":\"{{test_user_email}}\",\n\t\"password\":\"testuserpassword\"\n}"
				},
				"url": {
					"raw": "http://localhost:2718/api/users/signup",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "2718",
					"path": [
						"api",
						"users",
						"signup"
					]
				},
				"description": "Create a new user in the system"
			},
			"response": []
